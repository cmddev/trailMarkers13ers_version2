<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Range</th>
      <th>Mountain</th>
      {{!-- <th>Latitude</th>
      <th>Longitude</th> --}}
      <th>Duration</th>
      <th>Elevation</th>
      <th>Category</th>
      <th>Effort Level</th>
      <th>Review</th>
      <th>Rating</th>
      <th>Update Trail</th>
      <th>Delete Trail</th>
      <th>Favourite Trail</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each collection.trails}}
    <tr>
      <td>
        {{range}}
      </td>
      <td>
        {{mountain}}
      </td>
      {{!-- <td>
        {{latitude}}
      </td>
      <td>
        {{longitude}}
      </td> --}}
      <td>
        {{duration}}
      </td>
      <td>
        {{elevation}}
      </td>
      <td>
        {{category}}
      </td>
      <td>
        {{effort}}
      </td>
      <td>
        {{reviewTrail}}
      </td>
      <td>
        {{trailRating}}
      </td>
      <td>
        <a href="/trail/{{../collection._id}}/edittrail/{{_id}}" class="ui icon button">
          <i class="fas fa-edit"></i>
        </a>
      </td>
      <td>
        <a href="/collection/{{../collection._id}}/deletetrail/{{_id}}" class="ui icon button">
          <i class="fas fa-trash"></i>
        </a>
      </td>
      <td>
        <a href="/collection/{{../collection._id}}/deletetrail/{{_id}}" class="ui icon button">
          <i class="fas fa-heart"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>